{
  "name": "ddb-expression-builder",
  "version": "0.1.0",
  "author": {
    "name": "Gordon Leigh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gordonmleigh/ddb-expression-builder.git"
  },
  "homepage": "https://github.com/gordonmleigh/ddb-expression-builder#readme",
  "type": "module",
  "main": "./lib/cjs/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.js",
    "default": "./lib/cjs/index.js"
  },
  "files": [
    "src/",
    "!src/**/*.test.ts",
    "lib/",
    "!lib/**/*.test.*"
  ],
  "scripts": {
    "build": "npm run clean && npm run index && npm run compile && npm run compile:cjs && npm run lint && npm run test",
    "clean": "rm -rf lib/",
    "compile": "tsc",
    "compile:cjs": "tsc -p tsconfig.cjs.json",
    "index": "node makeIndex.js src/",
    "lint": "eslint src/ --ext=ts",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "ignore": "^5.2.0",
    "jest": "^27.5.1",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
